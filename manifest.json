{
  "manifest_version": 3,
  "name": "Search Without AI",
  "version": "1.0.0",
  "description": "Automatically adds -ai to Google searches to exclude AI-generated content and avoid triggering Gemini prompts",
  "permissions": [
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://www.google.ca/*",
    "https://www.google.co.uk/*",
    "https://www.google.com.au/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
